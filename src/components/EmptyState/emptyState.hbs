<div class="empty-state">
    <div class="empty-state__icon">
        {{#if iconUrl}}
            <img src="{{iconUrl}}" alt="{{title}}" class="empty-state__icon-img">
        {{else}}
            <div class="empty-state__icon-placeholder">
                <svg width="120" height="120" viewBox="0 0 120 120" fill="none">
                    <circle cx="60" cy="60" r="50" stroke="#FFB3D1" stroke-width="4" stroke-dasharray="8 8"/>
                    <path d="M40 55C40 53.3431 41.3431 52 43 52H77C78.6569 52 80 53.3431 80 55C80 56.6569 78.6569 58 77 58H43C41.3431 58 40 56.6569 40 55Z" fill="#FFB3D1"/>
                    <circle cx="48" cy="40" r="4" fill="#FFB3D1"/>
                    <circle cx="72" cy="40" r="4" fill="#FFB3D1"/>
                </svg>
            </div>
        {{/if}}
    </div>
    <h2 class="empty-state__title">{{title}}</h2>
    <p class="empty-state__message">{{message}}</p>
    {{#if buttonText}}
        <button class="empty-state__button" id="{{buttonId}}">{{buttonText}}</button>
    {{/if}}
</div>
