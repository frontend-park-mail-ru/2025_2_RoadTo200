<div class="empty-state">
    <div class="empty-state__icon">
        {{#if iconUrl}}
            <img src="{{iconUrl}}" alt="{{title}}" class="empty-state__icon-img">
        {{else}}
        {{/if}}
    </div>
    <h2 class="empty-state__title">{{title}}</h2>
    <p class="empty-state__message">{{message}}</p>
    {{#if buttonText}}
        <button class="empty-state__button" id="{{buttonId}}">{{buttonText}}</button>
    {{/if}}
</div>
