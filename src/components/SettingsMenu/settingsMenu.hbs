<nav class="settings-sidebar">
    <div class="sidebar__header">
        <h2 class="settings-title">Настройки</h2>
    </div>

    <ul class="sidebar__list">
        {{#each menuItems}}
            <li class="sidebar__item sidebar__item{{#if isActive}}-active{{else}}-disabled{{/if}}" data-tab="{{tab}}">
                <a href="#" class="sidebar__link sidebar__link{{#if isActive}}-active{{else}}-disabled{{/if}}">
                    <img src="{{icon}}" alt="{{name}}" class="sidebar__icon sidebar__icon{{#if isActive}}-active{{else}}-disabled{{/if}}">
                    {{name}}
                </a>
            </li>
        {{/each}}
    </ul>
    
    <button class="sidebar__logout-btn" id="logoutBtn">
        <img src="/src/assets/menu/exit.svg" alt="Выйти" class="sidebar__icon">
        Выйти
    </button>
</nav>
