<nav class="sidebar">
    <div class="sidebar__header">
        <div class="sidebar__brand">
            {{{smallHeartHtml}}}
            <h2 class="sidebar__name">Терабития</h2>
        </div>
        <button class="sidebar__close" id="menuCloseButton" aria-label="Закрыть меню">×</button>
    </div>

    <div class="sidebar__list-wrapper">
        <ul class="sidebar__list">
            {{#each menuItems}}
                <li class="sidebar__item {{#if isActive}}sidebar__item--active{{/if}}" data-route="{{route}}">
                    <a href="#" class="sidebar__link {{#if isActive}}sidebar__link--active{{/if}}">
                        <img src="{{../SVG_PATH_BASE}}{{icon}}" alt="{{name}}" class="sidebar__icon {{#if isActive}}sidebar__icon--active{{/if}}">
                        {{name}}
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
</nav>