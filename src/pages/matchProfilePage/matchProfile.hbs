<div class="match-profile-page">
    <div class="match-profile-content">
        <div class="photo-grid">
            {{#each photoCards}}
            <div class="photo-card" data-photo-id="{{this.id}}">
                {{#if this.isUserPhoto}}
                <div class="photo-card-image" style="background-image: url('{{this.image}}');"></div>
                {{else}}
                <div class="empty-photo-placeholder"></div>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <div class="match-profile-details">
    
            <h3 class="section-title">О себе</h3>
            <div id="description" class="content-wrapper">
                <p class="section-text">{{description}}</p>
            </div>
            
            <h3 class="section-title">Увлечения</h3>
            <div id="interests-list" class="interests-tags">
                {{#each interests}}
                    <span class="interest-tag" data-interest-id="{{this.id}}">
                        {{this.name}}
                    </span>
                {{/each}}
            </div>

            <h3 class="section-title">Активности</h3>
            <div class="icon-section">
                <div class="icon-circle"></div>
                <div class="icon-circle"></div>
            </div>

            <h3 class="section-title">Любимый исполнитель</h3>
            <div id="musician" class="content-wrapper">
                <p class="section-text">{{musician}}</p>
            </div>

            <h3 class="section-title">Любимая цитата</h3>
            <div id="quote" class="content-wrapper">
                <p class="section-text">{{quote}}</p>
            </div>

            <button class="chat-button">Перейти в чат</button>
        </div>
    </div>
</div>
